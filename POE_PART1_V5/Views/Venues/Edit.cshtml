@model POE_PART1_V5.Models.Venue

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Venue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VenueID" />
            <input type="hidden" asp-for="VenueImageUrl" />

            <div class="form-group">
                <label asp-for="VenueName" class="control-label"></label>
                <input asp-for="VenueName" class="form-control" />
                <span asp-validation-for="VenueName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VenueLocation" class="control-label"></label>
                <input asp-for="VenueLocation" class="form-control" />
                <span asp-validation-for="VenueLocation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VenueCapacity" class="control-label"></label>
                <input asp-for="VenueCapacity" class="form-control" />
                <span asp-validation-for="VenueCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Current Image</label>
                <div>
                    <img src="@(string.IsNullOrEmpty(Model.VenueImageUrl)? "/images/placeHolder.jpg" : Model.VenueImageUrl)"
                         alt="Venue Image" style="max-width: 200px; border:2px solid lightgreen" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Upload New Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <small class="text-muted">Leave empty to keep the current image</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}