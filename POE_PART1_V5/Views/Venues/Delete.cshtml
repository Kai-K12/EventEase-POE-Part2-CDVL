@model POE_PART1_V5.Models.Venue

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Delete Venue</h1>

<h3>Are you sure you want to delete this?</h3>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueCapacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueCapacity)
        </dd>
        <dt class="col-sm-2">
            Venue Image
        </dt>
        <dd class="col-sm-10">
            <img src="@(string.IsNullOrEmpty(Model.VenueImageUrl)? "/images/placeHolder.jpg" : Model.VenueImageUrl)"
                 alt="Venue Image" style="max-width: 200px; border:2px solid lightgreen" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VenueID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
